@using EntityLayer.Concrete
@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<html>
<body>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Başlık</th>
                <th>Sil</th>
                <th>Düzenle</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {


                <tr>
                    <th>@item.Id</th>
                    <td>@item.Name</td>
                    <td><a href="#" class="/Admin/AdminRole/DeleteRole/@item.Id">Sil</a></td>
                    <td><a href="/Admin/AdminRole/UpdateRole/@item.Id" class="btn btn-outline-primary">Güncelle</a></td>
                </tr>
            }
        </tbody>

    </table>

   <a href="/Admin/AdminRole/AddRole/" class="btn btn-outline-primary">Yeni rol ekle</a>
   <a href="/Admin/AdminRole/UserRoleList/" class="btn btn-outline-info">Kullanıcı rol listesi</a>
</body>
</html>
